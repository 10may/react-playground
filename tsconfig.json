{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        // custom
        "baseUrl": ".",
        "types": [
            "vite/client"
        ],
        "paths": {
            "@assets/*": [
                "src/assets/*"
            ],
            "@/*": [
                "src/*"
            ],
            "@component/*": [
                "src/component/*"
            ],
            "@Button/*": [
                "src/component/Button/*"
            ],
            "@Pages/*": [
                "src/Pages/*"
            ]
        },
        "plugins": [
            {
                "name": "@styled/typescript-styled-plugin"
            }
        ]
    },
    "include": [
        "src",
        ".eslintrc.cjs",
        "postcss.config.cjs",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}