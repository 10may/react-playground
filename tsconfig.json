{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		// custom
		"baseUrl": ".",
		"types": [
			"vite/client"
		],
		"plugins": [
			{
				"name": "@styled/typescript-styled-plugin"
			}
		],
		"paths": {
			"@Pages/*": [
				"src/Pages/*"
			],
			"@assets/*": [
				"src/assets/*"
			],
			"@component/*": [
				"src/component/*"
			],
			"@stories/*": [
				"src/stories/*"
			],
			"@types/*": [
				"src/types/*"
			],
			"@/*": [
				"src/*"
			],
			"@Components/*": [
				"src/Components/*"
			],
			"@SVGs/*": [
				"src/Components/SVGs/*"
			]
		}
	},
	"include": [
		"src",
		".eslintrc.cjs",
		"postcss.config.cjs",
		"vite.config.ts",
		"tailwind.config.cjs",
		"svgr-template.cjs"
	],
	"exclude": [
		"node_modules"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}